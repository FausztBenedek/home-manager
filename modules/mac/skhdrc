windowmanager < shift - 0x17 : yabai -m window --space 18
windowmanager < ctrl + shift - 0x17 : skhd -k "escape";\yabai -m window --space 18;\yabai -m space --focus 18

# 0x0A is 0 which will go to the full screen
windowmanager < 0x0A : yabai -m space --focus $(yabai -m query --spaces | jq '.[] | select(."is-native-fullscreen" == true) | .index' | head -n 1)
windowmanager < ctrl - 0x0A : skhd -k "escape";\yabai -m space --focus $(yabai -m query --spaces | jq '.[] | select(."is-native-fullscreen" == true) | .index' | head -n 1)
