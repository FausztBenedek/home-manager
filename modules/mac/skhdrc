
:: default : paint-borders-yabai-main-mode
:: windowmanager @ : paint-borders-yabai-window-manager-mode

ctrl - a ; windowmanager


# window realted
ctrl + cmd - l : yabai -m window --focus east
ctrl + cmd - k : yabai -m window --focus north
ctrl + cmd - j : yabai -m window --focus south
ctrl + cmd - h : yabai -m window --focus west

# Create the workspaces needed

# Windowmanager mode
windowmanager < ctrl - a ; default
windowmanager < escape ; default

# Navigating on the same space between windows
windowmanager < l : yabai -m window --focus east
windowmanager < ctrl + cmd - l : skhd -k "escape";\yabai -m window --focus east
windowmanager < shift - l : yabai -m window --swap east
windowmanager < ctrl + shift - l : skhd -k "escape";\yabai -m window --swap east
windowmanager < ctrl - l : yabai -m window --warp east
windowmanager < alt - l : yabai -m window --resize right:20:0
windowmanager < k : yabai -m window --focus north
windowmanager < ctrl + cmd - k : skhd -k "escape";\yabai -m window --focus north
windowmanager < shift - k : yabai -m window --swap north
windowmanager < ctrl + shift - k : skhd -k "escape";\yabai -m window --swap north
windowmanager < ctrl - k : yabai -m window --warp north
windowmanager < alt - k : yabai -m window --resize top:0:-20
windowmanager < j : yabai -m window --focus south
windowmanager < ctrl + cmd - j : skhd -k "escape";\yabai -m window --focus south
windowmanager < shift - j : yabai -m window --swap south
windowmanager < ctrl + shift - j : skhd -k "escape";\yabai -m window --swap south
windowmanager < ctrl - j : yabai -m window --warp south
windowmanager < alt - j : yabai -m window --resize bottom:0:20
windowmanager < h : yabai -m window --focus west
windowmanager < ctrl + cmd - h : skhd -k "escape";\yabai -m window --focus west
windowmanager < shift - h : yabai -m window --swap west
windowmanager < ctrl + shift - h : skhd -k "escape";\yabai -m window --swap west
windowmanager < ctrl - h : yabai -m window --warp west
windowmanager < alt - h : yabai -m window --resize left:-20:0
#other navigation on the same space
windowmanager < i : yabai -m window --toggle split
windowmanager < ctrl - i : skhd -k "escape";\yabai -m window --toggle split
windowmanager < f : yabai -m window --toggle zoom-fullscreen
windowmanager < ctrl - f : skhd -k "escape";\yabai -m window --toggle zoom-fullscreen
windowmanager < shift - 7 : yabai -m space --balance
windowmanager < ctrl + shift - 7 : skhd -k "escape";\yabai -m space --balance



windowmanager < q : yabai -m space --focus query
windowmanager < ctrl - q : skhd -k "escape";\yabai -m space --focus query
windowmanager < shift - q : yabai -m window --space query
windowmanager < ctrl + shift - q : skhd -k "escape";\yabai -m window --space query;\yabai -m space --focus query

windowmanager < w : yabai -m space --focus whisper
windowmanager < ctrl - w : skhd -k "escape";\yabai -m space --focus whisper
windowmanager < shift - w : yabai -m window --space whisper
windowmanager < ctrl + shift - w : skhd -k "escape";\yabai -m window --space whisper;\yabai -m space --focus whisper

windowmanager < e : yabai -m space --focus explore
windowmanager < ctrl - e : skhd -k "escape";\yabai -m space --focus explore
windowmanager < shift - e : yabai -m window --space explore
windowmanager < ctrl + shift - e : skhd -k "escape";\yabai -m window --space explore;\yabai -m space --focus explore

windowmanager < r : yabai -m space --focus related
windowmanager < ctrl - r : skhd -k "escape";\yabai -m space --focus related
windowmanager < shift - r : yabai -m window --space related
windowmanager < ctrl + shift - r : skhd -k "escape";\yabai -m window --space related;\yabai -m space --focus related

windowmanager < s : yabai -m space --focus sub
windowmanager < ctrl - s : skhd -k "escape";\yabai -m space --focus sub
windowmanager < shift - s : yabai -m window --space sub
