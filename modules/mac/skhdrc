# 0x12 is 1
windowmanager < 0x12 : yabai -m space --focus 14
windowmanager < ctrl - 0x12 : skhd -k "escape";\yabai -m space --focus 14
windowmanager < shift - 0x12 : yabai -m window --space 14
windowmanager < ctrl + shift - 0x12 : skhd -k "escape";\yabai -m window --space 14;\yabai -m space --focus 14

# 0x13 is 2
windowmanager < 0x13 : yabai -m space --focus 15
windowmanager < ctrl - 0x13 : skhd -k "escape";\yabai -m space --focus 15
windowmanager < shift - 0x13 : yabai -m window --space 15
windowmanager < ctrl + shift - 0x13 : skhd -k "escape";\yabai -m window --space 15;\yabai -m space --focus 15

# 0x14 is 3
windowmanager < 0x14 : yabai -m space --focus 16
windowmanager < ctrl - 0x14 : skhd -k "escape";\yabai -m space --focus 16
