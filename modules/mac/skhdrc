windowmanager < ctrl - x : skhd -k "escape";\yabai -m space --focus execute
windowmanager < shift - x : yabai -m window --space execute
windowmanager < ctrl + shift - x : skhd -k "escape";\yabai -m window --space execute;\yabai -m space --focus execute

windowmanager < c : yabai -m space --focus command
windowmanager < ctrl - c : skhd -k "escape";\yabai -m space --focus command
windowmanager < shift - c : yabai -m window --space command
